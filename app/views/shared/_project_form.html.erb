<%= form_for(@project) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Title..." %>

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Description (if needed)..." %>

    <%= f.label :deadline %>
    <%= f.datetime_select :deadline %>

    <%= f.label :priority %>
    <%= f.select :priority, [['Simple', 0], ['Urgent', 1], ['Important', 2], ['Urgent and important', 3]] %>

    <%= f.label :is_done %>
    <%= f.check_box :is_done %>

  </div>
  <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>